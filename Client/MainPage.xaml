<Page
    x:Class="Client.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Client"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="btnPurchase" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Height="100" FontSize="30" Click="OnPurchaseClicked">purchase</Button>

        <Button x:Name="btnReload" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Height="100" FontSize="30" Click="OnReloadClicked" Grid.Row="1">reload</Button>
    </Grid>
</Page>
